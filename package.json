{
  "name": "ng-electron",
  "version": "0.0.1",
  "homepage": "https://github.com/simo-an/ng-electron",
  "author": {
    "name": "SIMU",
    "email": "seimor@126.com"
  },
  "keywords": [
    "ng",
    "angular",
    "angular 12",
    "electron",
    "electron 13",
    "angular electron",
    "nodejs",
    "typescript",
    "less",
    "windows",
    "mac",
    "linux"
  ],
  "main": "dist/electron-main/main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "ng": "ng",
    "serve": "npm-run-all -p ng:serve electron:serve",
    "build": "npm run electron:serve-tsc && ng build --configuration production",
    "release": "npm run build && electron-builder build --publish=never",
    "ng:serve": "ng serve --configuration development",
    "electron:serve": "wait-on tcp:4200 && npm run electron:serve-tsc && npx electron . --serve",
    "electron:serve-tsc": "tsc -p tsconfig.main.json"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~12.0.4",
    "@angular/common": "~12.0.4",
    "@angular/compiler": "~12.0.4",
    "@angular/core": "~12.0.4",
    "@angular/forms": "~12.0.4",
    "@angular/platform-browser": "~12.0.4",
    "@angular/platform-browser-dynamic": "~12.0.4",
    "@angular/router": "~12.0.4",
    "@electron/remote": "^1.2.0",
    "rxjs": "~6.6.0",
    "tslib": "^2.1.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.0.4",
    "@angular-eslint/builder": "^12.1.0",
    "@angular-eslint/eslint-plugin": "^12.1.0",
    "@angular-eslint/eslint-plugin-template": "^12.1.0",
    "@angular-eslint/schematics": "^12.1.0",
    "@angular-eslint/template-parser": "^12.1.0",
    "@angular/cli": "~12.0.4",
    "@angular/compiler-cli": "~12.0.4",
    "@types/jasmine": "3.7.6",
    "@types/jasminewd2": "2.0.9",
    "@types/mocha": "8.2.2",
    "@types/node": "15.6.1",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/eslint-plugin-tslint": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "electron": "13.1.2",
    "electron-builder": "^22.11.7",
    "electron-reload": "^1.5.0",
    "eslint": "^7.29.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsdoc": "^35.3.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-sonarjs": "^0.8.0-125",
    "jasmine-core": "~3.7.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "typescript": "4.2.4",
    "wait-on": "^5.3.0"
  },
  "engines": { "node": ">=12.0.0" }
}
